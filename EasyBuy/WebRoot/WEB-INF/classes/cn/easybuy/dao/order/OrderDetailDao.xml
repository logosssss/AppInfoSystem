<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.easybuy.dao.order.OrderDetailDao">
	<insert id="add_Mybatis" parameterType="OrderDetail">
		insert into easybuy_order_detail(orderId,productId,quantity,cost) 
		values(#{orderId},#{productId},#{quantity},#{cost})
	</insert>
	
	<delete id="deleteById_Mybatis" parameterType="OrderDetail">
		delete from easybuy_order_detail where id = #{id}
	</delete>
	
	<select id="getOrderDetailById_Mybatis" parameterType="int" resultType="OrderDetail">
		select orderId,productId,quantity,cost from easybuy_order_detail where id = #{id}
	</select>
	
	<select id="getOrderDetailList_Mybatis" parameterType="int" resultType="OrderDetail">
		select id,orderId,productId,quantity,cost FROM easybuy_order_detail where 1=1
		<if test="orderId !=null">
			and orderId=#{orderId}
		</if>
	</select>
	
	<select id="queryOrderDetailCount_Mybatis" resultType="int">
		select count(*) FROM easybuy_order_detail
	</select>
</mapper>